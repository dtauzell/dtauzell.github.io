---
import Layout from "../layouts/Layout.astro";
import resumeData from "../data/resume.json";

const { name, location, social, employment, education, skills } = resumeData;
---

<Layout title={`Resume - ${name}`}>
    <div class="resume-wrapper">
        <!-- 
        <div class="resume-actions no-print">
            <a
                href="/resume/resume.pdf"
                class="btn btn-secondary"
                target="_blank"
                rel="noopener noreferrer"
            >
                Download PDF Version
            </a>
        </div>
    -->

        <div class="resume-paper">
            <!-- Header -->
            <header class="resume-header">
                <h1>{name}</h1>
                <div class="contact-info">
                    <span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                            ></path><circle cx="12" cy="10" r="3"></circle></svg
                        >
                        {location.city}, {location.region}
                    </span>
                    {
                        social.map((s) => (
                            <span>
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <>
                                        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                                        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
                                    </>
                                </svg>
                                <a href={s.url} target="_blank">
                                    {s.network}
                                </a>
                            </span>
                        ))
                    }
                </div>
            </header>

            <div class="resume-grid">
                <!-- Main Content (Left) -->
                <main class="resume-main">
                    <section>
                        <h3>Experience</h3>
                        <div class="timeline">
                            {
                                employment.history.map((job) => (
                                    <div class="timeline-item">
                                        <div class="job-header">
                                            <h4>{job.position}</h4>
                                            <span class="date">
                                                {job.start} —{" "}
                                                {job.end || "Present"}
                                            </span>
                                        </div>
                                        <h5
                                            class={`company ${job.url ? "has-link" : ""}`}
                                        >
                                            {job.url ? (
                                                <a
                                                    href={job.url}
                                                    target="_blank"
                                                >
                                                    {job.employer}
                                                </a>
                                            ) : (
                                                job.employer
                                            )}
                                        </h5>
                                        <p class="summary">{job.summary}</p>
                                        {job.highlights &&
                                            job.highlights.length > 0 && (
                                                <ul class="highlights">
                                                    {job.highlights.map(
                                                        (highlight) => (
                                                            <li>{highlight}</li>
                                                        ),
                                                    )}
                                                </ul>
                                            )}
                                    </div>
                                ))
                            }
                        </div>
                    </section>
                </main>

                <!-- Sidebar (Right) -->
                <aside class="resume-sidebar">
                    <section>
                        <h3>Skills</h3>
                        <div class="skills-list">
                            {
                                skills.sets.map((skillSet) => (
                                    <div class="skill-group">
                                        <p>
                                            <strong class="skill-name">
                                                {skillSet.name}:
                                            </strong>
                                            {skillSet.skills.join(", ")}
                                        </p>
                                    </div>
                                ))
                            }
                        </div>
                    </section>

                    <section>
                        <h3>Education</h3>
                        {
                            education.history.map((edu) => (
                                <div class="edu-item">
                                    <h4>{edu.institution}</h4>
                                    <p class="degree">
                                        {edu.studyType} in {edu.area}
                                    </p>
                                    <p class="date">
                                        {edu.start} — {edu.end}
                                    </p>
                                </div>
                            ))
                        }
                    </section>
                </aside>
            </div>
        </div>
    </div>
</Layout>

<style>
    /* Global Resume Styles */
    .resume-wrapper {
        max-width: 960px;
        margin: 0 auto;
        padding-bottom: 3rem;
        text-align: left;
    }

    .resume-actions {
        text-align: right;
        margin-bottom: 2rem;
    }

    /* Paper Effect - Now Organic Glass */
    .resume-paper {
        background: var(--bg-card);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-organic, 20px);
        padding: 3rem;
        color: var(--text-main);
    }

    /* Header */
    .resume-header {
        border-bottom: 1px solid var(--glass-border);
        padding-bottom: 2rem;
        margin-bottom: 2rem;
    }

    .resume-header h1 {
        font-family: var(--font-main);
        font-size: 3rem;
        font-weight: 700;
        /* Green to Gold gradient */
        background: linear-gradient(135deg, #fff 0%, #34d399 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
    }

    .contact-info {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        color: var(--text-muted);
        font-size: 0.95rem;
    }

    .contact-info span {
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .contact-info svg {
        opacity: 0.8;
        color: var(--accent-secondary); /* Gold icons */
    }

    /* Grid Layout */
    .resume-grid {
        display: grid;
        grid-template-columns: 3fr 1fr;
        gap: 3rem;
    }

    /* Sidebar */
    .resume-sidebar h3 {
        color: #fff;
        font-size: 1.2rem;
        border-bottom: 1px solid var(--glass-border);
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
        margin-top: 0;
    }

    .resume-sidebar section {
        margin-bottom: 2.5rem;
    }

    .skill-group {
        margin-bottom: 0.75rem;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .skill-name {
        color: var(--accent-secondary);
        font-weight: 600;
        margin-right: 0.2rem;
    }

    .edu-item {
        margin-bottom: 1.5rem;
    }

    .edu-item h4 {
        font-size: 1rem;
        color: #fff;
        margin-bottom: 0.2rem;
    }

    .degree {
        font-weight: 500;
        margin-bottom: 0.2rem;
        color: var(--text-muted);
        font-size: 0.95rem;
    }

    .date {
        font-size: 0.9rem;
        color: var(--text-muted);
        font-style: italic;
        opacity: 0.8;
    }

    /* Main Content */
    .resume-main h3 {
        color: #fff;
        font-size: 1.75rem;
        border-bottom: 1px solid var(--glass-border);
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
        margin-top: 0;
    }

    .timeline-item {
        margin-bottom: 2.5rem;
        position: relative;
    }

    .job-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 0.25rem;
    }

    .job-header h4 {
        font-size: 1.3rem;
        color: #fff;
        font-weight: 700;
        margin: 0;
    }

    .company {
        font-size: 1.1rem;
        color: var(--accent-primary);
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .company a {
        color: var(--accent-primary);
        text-decoration: none;
        transition: color 0.2s;
    }

    .company a:hover {
        color: var(--accent-secondary);
    }

    .summary {
        line-height: 1.7;
        margin-bottom: 1rem;
        color: var(--text-muted);
    }

    .highlights {
        padding-left: 1.2rem;
        line-height: 1.6;
        color: var(--text-main);
    }

    .highlights li {
        margin-bottom: 0.4rem;
    }

    .highlights li::marker {
        color: var(--accent-secondary);
    }

    a {
        color: var(--accent-primary);
        text-decoration: none;
        transition: all 0.2s ease;
    }

    a:hover {
        color: var(--accent-secondary);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .resume-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .job-header {
            flex-direction: column;
        }
    }

    /* Print Styles - Keep these clean/white */
    @media print {
        .no-print {
            display: none !important;
        }

        body,
        .cover-container {
            background: white !important;
            color: black !important;
            background-image: none !important;
        }

        .resume-paper {
            box-shadow: none;
            padding: 0;
            background: white !important;
            border: none !important;
            color: black !important;
        }

        .resume-wrapper {
            max-width: 100%;
        }

        a {
            text-decoration: none !important;
            color: black !important;
        }

        .resume-grid {
            display: grid;
            grid-template-columns: 2.5fr 1fr;
            gap: 1.5cm;
        }

        .resume-header h1,
        .job-header h4,
        .resume-main h3,
        .resume-sidebar h3 {
            color: black !important;
            -webkit-text-fill-color: black !important;
        }

        .company {
            color: #333 !important;
        }

        .skill-name {
            color: #333 !important;
        }
    }
</style>
