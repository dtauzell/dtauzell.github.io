---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Music - Dave Tauzell">
    <div class="album-grid">
        <!-- Trails Album -->
        <div class="album-card">
            <img
                src="/images/album_cover_trails_small.jpeg"
                alt="Trails Album Cover"
                class="album-cover"
            />
            <div class="album-info">
                <h3>Trails</h3>
                <p>
                    My latest instrumental album featuring atmospheric
                    compositions and melodic journeys.
                </p>
                <a
                    href="https://distrokid.com/hyperfollow/davetauzell/trails"
                    class="btn btn-secondary">Stream or Download</a
                >
            </div>
        </div>

        <!-- Acoustica 1 Album -->
        <div class="album-card">
            <img
                src="/images/album_cover_acoustica1_small.jpeg"
                alt="Acoustica 1 Album Cover"
                class="album-cover"
            />
            <div class="album-info">
                <h3>Acoustica 1</h3>
                <p>
                    An acoustic exploration of melody and harmony in
                    instrumental form.
                </p>
                <a
                    href="https://distrokid.com/hyperfollow/davetauzell/acoustica-1"
                    class="btn btn-secondary">Stream or Download</a
                >
            </div>
        </div>
    </div>
</Layout>
